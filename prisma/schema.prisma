datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String   @id @default(cuid())
  name             String
  employeeCode     String?  @unique
  role             Role     @default(EMPLOYEE)
  email            String?  @unique
  pinHash          String?
  active           Boolean  @default(true)

  shifts           Shift[]
}

model Location {
  id            String   @id @default(cuid())
  name          String
  code          String   @unique
  lat           Float
  lng           Float
  radiusMeters  Int      @default(200)
  active        Boolean  @default(true)

  shifts        Shift[]
}

model Shift {
  id          String       @id @default(cuid())
  user        User         @relation(fields: [userId], references: [id])
  userId      String
  location    Location     @relation(fields: [locationId], references: [id])
  locationId  String
  clockIn     DateTime
  clockOut    DateTime?
  status      ShiftStatus  @default(OPEN)
}

enum Role {
  EMPLOYEE
  MANAGER
  ADMIN
}

enum ShiftStatus {
  OPEN
  CLOSED
  ADJUSTED
  APPROVED
}
